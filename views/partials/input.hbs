<div class="mb-3">
    <label class="form-label">Name</label>
    <input name="name" type="text" class="form-control" value="{{employee.name}}" required>
</div>
<div class="mb-3">
    <label class="form-label">Address</label>
    <textarea name="address" type="text" class="form-control" rows="3">{{employee.address}}</textarea>
    <div class="form-text text-end">Option</div>
</div>
<div class="mb-3">
    <label class="form-label">Salary</label>
    <input name="salary" type="number" class="form-control" min="0" value="{{employee.salary}}">
    <div class="form-text text-end">Option</div>
</div>